{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "5s",
      "disk_size": 5070,
      "guest_os_type": "Debian_64",
      "guest_additions_path": "/home/vagrant/VBoxGuestAdditions_{{.Version}}.iso",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/cdimage/release/current/amd64/iso-cd/{{user `debian_version`}}.iso",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "auto ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "locale=en_US ",
        "keymap=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=vagrantup.com ",
        "<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "output/{{.Provider}}/{{user `output_name`}}",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CHEF_INSTALLMETHOD={{user `chef_installmethod`}}",
        "CHEF_VERSION={{user `chef_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "template/debian/scripts/base.sh",
        "template/debian/scripts/vmtools.sh",
        "template/debian/scripts/git.sh",
        "template/debian/scripts/vim.sh",
        "template/debian/scripts/curl.sh",
        "template/debian/scripts/vagrant.sh",
        "template/debian/scripts/chef.sh",
        "template/debian/scripts/cleanup.sh",
        "template/debian/scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "chef_installmethod": "default",
    "chef_version": "latest",
    "vm_name": "debian-7-amd64",
    "output_name": "debian-7-3-amd64.box",
    "iso_checksum": "72473e8a5e65b61acc7efde90d9f71d1",
    "debian_version": "debian-7.3.0-amd64-netinst"
  }
}

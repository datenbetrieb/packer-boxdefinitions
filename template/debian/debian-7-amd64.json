{
  "variables": {
    "chef_installmethod": "default",
    "chef_version": "latest",
    "vm_name": "debian-7-amd64"
  },

  "builders": [
    {
      "type": "virtualbox",
      "vm_name": "{{user `vm_name`}}",
      "guest_os_type": "Debian_64",
      "disk_size": 5070,
      "virtualbox_version_file": ".vbox_version",
      "guest_additions_path": "/srv/vmtools/VBoxGuestAdditions_{{.Version}}.iso",
      "http_directory": "http",
      "iso_url": "http://cdimage.debian.org/cdimage/release/current/amd64/iso-cd/debian-7.2.0-amd64-netinst.iso",
      "iso_checksum": "b86774fe4de88be6378ba3d71b8029bd",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "auto ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "locale=en_US ",
        "keymap=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=vagrantup.com ",
        "<enter>"
      ],
      "boot_wait": "5s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "output/{{.Provider}}/debian-7-amd64.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "CHEF_INSTALLMETHOD={{user `chef_installmethod`}}",
        "CHEF_VERSION={{user `chef_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "template/debian/scripts/base.sh",
        "template/debian/scripts/git.sh",
        "template/debian/scripts/vagrant.sh",
        "template/debian/scripts/vmtools.sh",
        "template/debian/scripts/chef.sh",
        "template/debian/scripts/cleanup.sh",
        "template/debian/scripts/zerodisk.sh"
      ]
    }
  ]
}

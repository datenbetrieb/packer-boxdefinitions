{

  "builders": [
      {
        "type": "qemu",
        "disk_size": 5070,
        "http_directory": "http",
        "iso_checksum": "b86774fe4de88be6378ba3d71b8029bd",
        "iso_checksum_type": "md5",
        "iso_url": "http://cdimage.debian.org/cdimage/release/current/amd64/iso-cd/debian-7.2.0-amd64-netinst.iso",
        "shutdown_command": "shutdown -P now'",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_username": "vagrant",
        "ssh_wait_timeout": "10000s",
        "format": "qcow2",
        "headless": true,
        "accelerator": "kvm",
        "net_device": "virtio-net",
        "disk_interface": "virtio",
        "boot_command": [
            "<esc><wait>",
            "install ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US ",
            "auto ",
            "locale=en_US ",
            "kbd-chooser/method=us ",
            "netcfg/get_hostname={{ .Name }} ",
            "netcfg/get_domain=vagrantup.com ",
            "fb=false ",
            "debconf/frontend=noninteractive ",
            "console-setup/ask_detect=false ",
            "console-keymaps-at/keymap=us ",
            "keyboard-configuration/xkb-keymap=us ",
            "<enter><wait>"
        ],
        "boot_wait": "5s",
        "qemuargs": [
          [ "-m", "1024m" ],
          [ "--no-acpi", "" ]
        ]
      },
    {
      "type": "virtualbox",
      "guest_os_type": "Debian_64",
      "disk_size": 5070,
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "http_directory": "http",
      "iso_checksum": "b86774fe4de88be6378ba3d71b8029bd",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/cdimage/release/current/amd64/iso-cd/debian-7.2.0-amd64-netinst.iso",
      "shutdown_command": "echo '/sbin/shutdown -h -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S bash '/tmp/shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=vagrantup.com ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=us ",
        "keyboard-configuration/xkb-keymap=us ",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "debian-7-amd64"
    }
  ],
  "post-processors": [
    {
    "output": "debian-7-amd64.box",
    "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        },
          "qemu": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
      },
      "type": "shell",
      "enviroment_vars": [
        "USER_CHEF_INSTALLMETHOD={{user `remote`}}",
        "CHEF_VERSION={{user `latest`}}"
      ],
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/ruby.sh",
        "scripts/chef.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    },

    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "run_list": ["vim"]
    }
  ]
}


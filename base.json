{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=de ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain=vagrantup.com ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=de ",
        "keyboard-configuration/xkb-keymap=de ",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 5070,
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "80f498a1f9daa76bc911ae13692e4495",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/cdimage/release/7.1.0/amd64/iso-cd/debian-7.1.0-amd64-netinst.iso",
      "shutdown_command": "shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox",
      "vboxmanage": [],
      "vm_name": "debian-7-amd64-base"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "debian-7-amd64-base.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox": {},
        "vmware": {}
      },
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant-ssh-key.sh",
        "scripts/chef.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ]
}

